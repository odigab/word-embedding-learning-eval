\ProvidesPackage{beamerinnerthemeNICTA}

\newif\ifNICTA@innerShadow

\DeclareOptionBeamer{shadow}[true]{\csname NICTA@innerShadow#1\endcsname}

\ProcessOptionsBeamer

\mode<presentation>

\ifNICTA@innerShadow
\useinnertheme[shadow]{rounded}
\else
\useinnertheme{rounded}
\fi

\useinnertheme{circles}

\renewcommand\emph[1]{{\bf #1}}

% turn off section numbers in TOC
\setbeamertemplate{section in toc}
{\leavevmode\leftskip=2ex\hbox{\Large\textbullet}\kern1.2ex%
  \inserttocsection\par}

\setbeamertemplate{subsection in toc}
{\leavevmode\leftskip=2.5em\raise0.5pt\hbox{\textbullet}\kern1.25ex%
  \inserttocsubsection\par}

\setbeamertemplate{subsubsection in toc}
{\leavevmode\normalsize\usebeamerfont{subsection in
    toc}\leftskip=3.5em\raise0.5pt\hbox{\textbullet}\kern1.25ex%
  \usebeamerfont{subsubsection in toc}%
  \inserttocsubsubsection\par}

\mode<all>
